extends ../../../amma-common/common/views/tab-form

block vars
    - var scope = {controller:'AmmaProductOrderStatusFormMainController', controllerAlias:'ammaProductOrderStatusFormMainController', formName: 'ammaProductOrderStatusMainForm'};;

block title
    | Main

block formContent
    section(layout='column', flex='')
        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'name', 'Name', null,scope.controllerAlias + '.model._id')(required='', ng-disabled='!!' + scope.controllerAlias + '.id')
                +amma-error-wrapper(scope, 'name')
                    +amma-error-item('required') Please enter name

            +amma-form-item-container(scope)
                +amma-input(scope, 'title', 'Title')(required='')
                +amma-error-wrapper(scope, 'title')
                    +amma-error-item('required') Please enter title

        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'frontendStatus', 'Frontend status')(required='')
                +amma-error-wrapper(scope, 'frontendStatus')
                    +amma-error-item('required') Please enter front end status

            +amma-form-item-container(scope)
                +amma-select(scope, 'type', 'Type')(required='')
                    md-option(value='pending')
                        | Pending
                    md-option(value='completed')
                        | Completed
                    md-option(value='cancelled')
                        | Cancelled
                +amma-error-wrapper(scope, 'type')
                    +amma-error-item('required') Please select type
    section(layout='column', flex='')
        h3(flex='') Email
        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'emailSubject', 'emailSubject', null,scope.controllerAlias + '.model.notify.subject')(required='')
                +amma-error-wrapper(scope, 'emailSubject')
                    +amma-error-item('required') Please enter subject

        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-text-area(scope, 'emailBodyHtml', 'Html email', scope.controllerAlias + '.model.notify.bodyHtml' )(required='')
                +amma-error-wrapper(scope, 'emailBodyHtml')
                    +amma-error-item('required') Please enter html email

            +amma-form-item-container(scope)
                +amma-text-area(scope, 'emailBodyText', 'Text email', scope.controllerAlias + '.model.notify.bodyText' )
