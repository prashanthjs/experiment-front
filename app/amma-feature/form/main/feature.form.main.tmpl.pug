extends ../../../amma-common/common/views/tab-form

block vars
    - var scope = {controller:'AmmaFeatureFormMainController', controllerAlias:'ammaFeatureFormMainController', formName: 'ammaFeatureMainForm'};;

block title
    | Main

block formContent
    section(layout='column', flex='')
        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'name', 'Name', null,scope.controllerAlias + '.model._id')(required='', ng-disabled='!!' + scope.controllerAlias + '.id')
                +amma-error-wrapper(scope, 'name')
                    +amma-error-item('required') Please enter name

        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'title', 'Title')
                +amma-error-wrapper(scope, 'title')
                    +amma-error-item('required') Please enter title


        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-chips(scope, 'items', 'Options')

block formActions
    +amma-form-submit(scope, 'Save')
    +amma-form-submit-save(scope, 'Save and close')
    +amma-form-cancel(scope, 'Cancel')
    md-button.md-warn.md-raised(ng-click=scope.controllerAlias + '.openSecondDialog($event)')
