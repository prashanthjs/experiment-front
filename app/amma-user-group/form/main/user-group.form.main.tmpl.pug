extends ../../../amma-common/common/views/tab-form

block vars
    - var scope = {controller:'AmmaUserGroupFormMainController', controllerAlias:'ammaUserGroupFormMainController', formName: 'ammaUserGroupMainForm'};;

block title
    | Main

block formContent
    section(layout='column', flex='')
        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'name', 'Name', null,scope.controllerAlias + '.model._id')(required='', ng-disabled='!!' + scope.controllerAlias + '.id')
                +amma-error-wrapper(scope, 'name')
                    +amma-error-item('required') Please enter name

        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'title', 'Title')(required='')
                +amma-error-wrapper(scope, 'title')
                    +amma-error-item('required') Please enter title

        div(layout='column', flex='')
            h2 Roles
            div(layout='row', layout-wrap='', flex)
                div(flex='50', ng-repeat='item in ' + scope.controllerAlias + '.roles')
                    md-checkbox(ng-checked=scope.controllerAlias + '.exists(item._id)', ng-click=scope.controllerAlias + '.toggle(item._id)')
                        | {{ item.title }}
