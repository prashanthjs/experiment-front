- var scope = {controllerAlias: 'ammaGalleryController'};

md-dialog(aria-label='{{' + scope.controllerAlias + '.currentImage.filename}}')
    md-dialog-content.md-dialog-content.extras-image-dialog
        img(ng-src='{{' + scope.controllerAlias + '.currentImage.url}}', alt='{{' + scope.controllerAlias + '.currentImage.filename}}')
    md-dialog-actions(layout='row')
        = '{{' + scope.controllerAlias + '.currentImage.filename}}'
        span(flex='')
        md-button.md-icon-button(ng-click=scope.controllerAlias + '.prev()', aria-label='prev')
            md-icon(md-font-icon='zmdi zmdi-chevron-left')
        md-button.md-icon-button(ng-click= scope.controllerAlias + '.next()', aria-label='next')
            md-icon(md-font-icon='zmdi zmdi-chevron-right')
