extends ../../../amma-common/common/views/tab-form

block vars
    - var scope = {controller:'AmmaStoreFormMainController', controllerAlias:'ammaStoreFormMainController', formName: 'ammaStoreMainForm'};;

block title
    | Main

block formContent
    section(layout='column', flex='')
        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'name', 'Name', null,scope.controllerAlias + '.model._id')(required='', ng-disabled='!!' + scope.controllerAlias + '.id')
                +amma-error-wrapper(scope, 'name')
                    +amma-error-item('required') Please enter name

            +amma-form-item-container(scope)
                +amma-input(scope, 'title', 'Title')(required='')
                +amma-error-wrapper(scope, 'title')
                    +amma-error-item('required') Please enter title


        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-input(scope, 'email', 'Email', 'email')(required='')
                +amma-error-wrapper(scope, 'email')
                    +amma-error-item('required') Please enter email
                    +amma-error-item('email') Please enter valid email

            +amma-form-item-container(scope)
                +amma-input(scope, 'contactNumber', 'Contact Number')(required='')
                +amma-error-wrapper(scope, 'contactNumber')
                    +amma-error-item('required') Please enter your contact number


        div(layout='row', flex='')
            +amma-form-item-container(scope)
                +amma-select(scope, 'parent', 'Parent Store' )
                    md-option(value='')
                    md-option(ng-repeat='store in ' + scope.controllerAlias + '.stores',  ng-value='store._id', ng-if=scope.controllerAlias+".eventData.id != store._id")
                        | {{store.title}}
            +amma-form-item-container(scope)
                +amma-input(scope, 'website', 'Website', 'url')(required='')
                +amma-error-wrapper(scope, 'website')
                    +amma-error-item('required') Please enter url
                    +amma-error-item('url') Please enter valid url

        div(layout='row')
            div(layout='row', flex='50')
                +amma-checkbox(scope, 'isActive', 'Is Active?')

    section(flex='', layout='column')
        h2 Address
        +amma-address(scope, scope.controllerAlias + '.model.address')
